<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   >
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:id="@+id/status_bar"
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/icon_launcher"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_in_alert"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/splash_lint"
        android:scaleType="centerCrop"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/avatar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="42dp"
        android:background="@color/DarkerBlack"
        android:padding="3dp"
        android:scaleType="centerCrop"
        android:tint="#090909"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="@color/FocusBlue"
        app:riv_border_width="2dp"
        app:riv_corner_radius="65dp"
        app:riv_mutate_background="true" />
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintBottom_toTopOf="@id/detail"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        tools:text="Le Dinh Trung"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/helvetica_font"/>
    <TextView
        android:id="@+id/detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintEnd_toEndOf="@id/name"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="trung17dinhle@gmail.com"
        app:layout_constraintBottom_toTopOf="@id/edit_account"/>
    <TextView
        android:id="@+id/edit_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintStart_toStartOf="@id/name"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/FlatWhite"
        android:background="@drawable/background_edit_account"
        android:text="Edit profile"
        android:textStyle="bold"
        android:textAllCaps="true"/>
    <android.support.constraint.Group
        android:id="@+id/signed_in_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="avatar,name,detail,edit_account"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/sign_in_alert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="You need an account to use this feature"
        app:layout_constraintTop_toBottomOf="@+id/icon_launcher"
        app:layout_constraintBottom_toTopOf="@id/sign_in"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/helvetica_font"
        android:gravity="center"/>
    <TextView
        android:id="@+id/sign_in"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="Sign In"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/sign_in_alert"
        app:layout_constraintBottom_toTopOf="@id/or"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/helvetica_font"
        android:gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/background_sign_in"/>
    <TextView
        android:id="@+id/or"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textSize="14sp"
        android:text="Or"
        app:layout_constraintTop_toBottomOf="@id/sign_in"
        app:layout_constraintBottom_toTopOf="@id/sign_up"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/helvetica_font"
        android:textColor="@android:color/white"
        android:gravity="center" />
    <TextView
        android:id="@+id/sign_up"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Sign Up"
        app:layout_constraintTop_toBottomOf="@id/or"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:textColor="@color/FocusColorTwo"
        android:background="@drawable/background_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/helvetica_font"
        android:gravity="center"
        android:focusable="true"
        android:clickable="true"/>
    <android.support.constraint.Group
        android:id="@+id/not_signed_in_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="icon_launcher,sign_in_alert,sign_in,sign_up,or"
        android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>