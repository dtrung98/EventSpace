<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/item_event_list_color"
    android:clickable="true"
    android:animateLayoutChanges="true"
    android:focusable="true">
        <ImageView
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:paddingTop="14dp"
            android:layout_margin="10dp"
            android:paddingBottom="14dp"
            android:tint="@color/setting_label_color"
            android:background="@drawable/round_support_touch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close_black_24dp" />
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintBottom_toBottomOf="@id/back"
            android:paddingStart="65dp"
            android:paddingEnd="65dp"
            android:text="Purchase"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/setting_label_color"/>
        <ImageView
            android:id="@+id/info_button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:paddingTop="16dp"
            android:layout_margin="10dp"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="@color/FlatWhite"
            android:background="@drawable/round_support_touch"
            app:srcCompat="@drawable/resume" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/back"
            app:layout_constraintVertical_bias="0.0">

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never">
                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true">
                                <com.makeramen.roundedimageview.RoundedImageView
                                    android:id="@+id/space_image"
                                    android:layout_width="0dp"
                                    android:layout_height="150dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:src="@drawable/sample_singer_poster"
                                    android:scaleType="centerCrop"
                                    android:layout_margin="8dp"
                                    app:riv_corner_radius_top_left="8dp"
                                    app:riv_corner_radius_top_right="8dp"
                                    />
                                <View
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    app:layout_constraintTop_toBottomOf="@id/image"
                                    app:layout_constraintBottom_toTopOf="@id/image"
                                    app:layout_constraintStart_toEndOf="@id/image"
                                    app:layout_constraintEnd_toStartOf="@id/image"
                                    android:background="@drawable/black_circle"/>
                                <ImageView
                                    android:id="@+id/image"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    app:layout_constraintTop_toBottomOf="@id/space_image"
                                    app:layout_constraintBottom_toBottomOf="@id/space_image"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    tools:srcCompat="@drawable/domain"
                                    android:padding="20dp"
                                    android:background="@drawable/background_circle_event_filter"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    app:layout_constraintTop_toTopOf="@id/cinema_text"
                                    app:layout_constraintBottom_toBottomOf="@id/space_name"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="@drawable/background_item_choose_movie"/>
                                <TextView
                                    android:id="@+id/cinema_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Event : "
                                    android:textStyle="bold"
                                    android:paddingTop="10dp"
                                    android:paddingStart="20dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/event_name"
                                    app:layout_constraintHorizontal_chainStyle="packed"
                                    android:textSize="20sp"
                                    android:textColor="@color/setting_label_color"
                                    app:layout_constraintTop_toBottomOf="@id/image"
                                    android:layout_marginTop="20dp"/>
                                <TextView
                                    android:id="@+id/event_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                   tools:text="Tiệc cưới"
                                    android:textSize="20sp"
                                    android:paddingTop="10dp"
                                    android:textColor="@color/FlatOrange"
                                    android:paddingEnd="20dp"
                                    app:layout_constraintTop_toTopOf="@id/cinema_text"
                                    app:layout_constraintStart_toEndOf="@id/cinema_text"
                                    app:layout_constraintEnd_toEndOf="parent"/>
                                <TextView
                                    android:id="@+id/movie_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Space : "
                                    android:paddingStart="20dp"
                                    android:paddingBottom="20dp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/setting_label_color"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toStartOf="@id/space_name"
                                    app:layout_constraintTop_toBottomOf="@id/event_name"
                                    app:layout_constraintHorizontal_chainStyle="packed"
                                    android:textSize="20sp"/>
                                <TextView
                                    android:id="@+id/space_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    tools:text="Trung tâm tiệc cưới Âu Lạc"
                                    android:textSize="20sp"
                                    android:paddingBottom="20dp"
                                    android:paddingEnd="20dp"
                                    android:layout_marginEnd="5dp"
                                    android:textColor="@color/FlatOrange"
                                    app:layout_constraintTop_toTopOf="@id/movie_text"
                                    app:layout_constraintStart_toEndOf="@id/movie_text"
                                    app:layout_constraintEnd_toEndOf="parent"/>
                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/option_panel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/background_item_choose_movie"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/space_name"
                            android:layout_marginTop="16dp"
                            android:paddingBottom="20dp"
                            >
                                <TextView
                                    android:id="@+id/option"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="28dp"
                                    android:layout_marginLeft="15dp"
                                    android:paddingTop="10dp"
                                    android:text="Choose dates to continue"
                                    android:textColor="@color/FocusYellowColor"
                                    android:textSize="14dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />
                                <TextView
                                    android:id="@+id/date_from"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="15dp"
                                    android:background="@drawable/line_bottom"
                                    app:layout_constraintTop_toBottomOf="@id/option"
                                    android:layout_marginTop="5dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:hint="From"
                                    android:textSize="15sp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_marginStart="30dp"/>
                                <TextView
                                    android:id="@+id/date_to"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="15dp"
                                    android:paddingBottom="15dp"
                                    android:background="@drawable/line_bottom"
                                    app:layout_constraintTop_toBottomOf="@id/date_from"
                                    android:layout_marginTop="5dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:hint="To"
                                    android:clickable="true"
                                    android:textSize="15sp"
                                    android:focusable="true"
                                    android:layout_marginStart="30dp"/>
                        </android.support.constraint.ConstraintLayout>

                                <ImageView
                                    android:id="@+id/continue_icon"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="16dp"
                                    android:background="@drawable/background_continue_disable"
                                    android:padding="8dp"
                                    android:src="@drawable/icons8_right"
                                    android:tint="#FF555555"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/option_panel" />

                                <com.tuyenmonkey.mkloader.MKLoader
                                    android:id="@+id/loader"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    app:layout_constraintTop_toTopOf="@id/continue_icon"
                                    app:layout_constraintBottom_toBottomOf="@id/continue_icon"
                                    app:layout_constraintStart_toStartOf="@id/continue_icon"
                                    app:layout_constraintEnd_toEndOf="@id/continue_icon"
                                    android:visibility="gone"
                                    app:mk_type="Whirlpool"
                                    app:mk_color="@color/FlatOrange"
                                    tools:visibility="gone"/>
                                <TextView
                                    android:id="@+id/service_title"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:text="Biểu giá dịch vụ"
                                    android:textStyle="bold"
                                    android:textColor="@color/FlatWhite"
                                    android:textSize="20sp"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginEnd="30dp"
                                    android:layout_marginTop="20dp"
                                    android:visibility="gone"
                                    app:layout_constraintTop_toBottomOf="@id/continue_icon"/>
                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/recycler_view"
                                    app:layout_constraintTop_toBottomOf="@id/service_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:clipToPadding="false"
                                    android:paddingBottom="80dp">
                                        <!--include layout="@layout/item_show_time"/-->
                                </android.support.v7.widget.RecyclerView>
                        </android.support.constraint.ConstraintLayout>
                </android.support.v4.widget.NestedScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/purchase_panel"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/background_sign_in"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="24dp"
                    android:animateLayoutChanges="false"
                    android:clickable="true"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:focusable="true"
                    android:layout_marginEnd="24dp">
                        <TextView
                            android:id="@+id/purchase_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/purchase_text"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Total Price : 5.000.000 đ"
                            android:textColor="@color/FlatWhite"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:visibility="visible"
                            android:visibility="gone"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/purchase_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/purchase_price"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:text="Please Sign In to continue"
                            android:textColor="@color/FlatWhite"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>