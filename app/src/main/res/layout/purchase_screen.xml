<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/DarkerBlack"
    android:clickable="true"
    android:animateLayoutChanges="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="65dp"
        android:layout_height="75dp"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_button" />
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/back_button"
        android:text="Your Purchase"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/FlatWhite"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:overScrollMode="never">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
            <TextView
                android:id="@+id/user_const"
                android:layout_width="75dp"
                android:layout_height="0dp"
                android:text="User :"
                android:textColor="@color/setting_label_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/user"
                app:layout_constraintBottom_toBottomOf="@id/user"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/user_const"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="18dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/FlatBlue"
                tools:text="LE DINH TRUNG"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/event_const"
                android:layout_width="75dp"
                android:layout_height="0dp"
                android:text="Event :"
                android:textColor="@color/setting_label_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/event"
                app:layout_constraintBottom_toBottomOf="@id/event"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/event"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/user"
                app:layout_constraintStart_toEndOf="@id/event_const"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="18dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/FlatBlue"
                tools:text="To chuc tiec cuoi"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/space_const"
                android:layout_width="75dp"
                android:layout_height="0dp"
                android:text="Space : "
                android:textColor="@color/setting_label_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/space"
                app:layout_constraintBottom_toBottomOf="@id/space"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/event"
                app:layout_constraintStart_toEndOf="@id/space_const"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="18dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/FlatBlue"
                tools:text="Trung tâm sự kiện Âu Lạc"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/date_from_const"
                android:layout_width="75dp"
                android:layout_height="0dp"
                android:text="Date: "
                android:textColor="@color/setting_label_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/date_from"
                app:layout_constraintBottom_toBottomOf="@id/date_from"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/date_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/space"
                app:layout_constraintStart_toEndOf="@id/date_from_const"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="18dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/FlatBlue"
                tools:text="1"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/date_to_const"
                android:layout_width="75dp"
                android:layout_height="0dp"
                android:text="To Date: "
                android:textColor="@color/setting_label_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/date_to"
                app:layout_constraintBottom_toBottomOf="@id/date_to"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/date_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/date_from"
                app:layout_constraintStart_toEndOf="@id/date_to_const"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="18dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/FlatBlue"
                tools:text="12/01/2019"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/purchase_date_const"
                android:layout_width="75dp"
                android:layout_height="0dp"
                android:text="Purchase Time : "
                android:textColor="@color/setting_label_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/purchase_date"
                app:layout_constraintBottom_toBottomOf="@id/purchase_date"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/purchase_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/date_to"
                app:layout_constraintStart_toEndOf="@id/purchase_date_const"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="18dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/FlatBlue"
                tools:text="12/01/2019"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/price_const"
                android:layout_width="75dp"
                android:layout_height="0dp"
                android:text="Price : "
                android:textColor="@color/setting_label_color"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/price"
                app:layout_constraintBottom_toBottomOf="@id/price"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/purchase_date"
                app:layout_constraintStart_toEndOf="@id/price_const"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="18dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/FlatBlue"
                tools:text="200000 vnd"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/note_const"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/purchase_note"
                android:textColor="#888"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@id/price"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>