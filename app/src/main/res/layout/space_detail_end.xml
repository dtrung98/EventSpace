<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.motion.MotionLayout android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <FrameLayout
            android:id="@+id/status_bar_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <View
                android:id="@+id/status_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/image_parent"
            android:layout_width="0dp"
            android:layout_height="175dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:visibility="visible"
                android:visibility="gone"
                tools:src="@drawable/sample_singer_poster" />
        </FrameLayout>
        <View
            android:id="@+id/background_top_gradient"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/background_bottom_gradient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#1123202B"
            />
        <View
            android:id="@+id/background_bottom_gradient"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="@id/image_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/background_gradient_header"
            />
        <FrameLayout
            android:id="@+id/icon_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/status_bar_parent"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:alpha="0">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                tools:visibility="visible"
                android:visibility="gone"
                tools:src="@drawable/domain"
                android:padding="18dp"
                android:background="@drawable/background_circle_event_filter"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/icon_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Trung tÃ¢m tiec cuoi Au Lac TP Ho Chi Minh"
            android:gravity="center"
            android:textSize="48sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="#FAF3DD"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:fontFamily="@font/helvetica_font"
            android:shadowRadius="14"
            android:shadowColor="#11111111"
            android:shadowDx="5"
            android:shadowDy="14"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:alpha="0"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_event_list"
            tools:layoutManager="GridLayoutManager"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:clipToPadding="false"
            android:paddingBottom="75dp"
            android:overScrollMode="never"
            tools:spanCount="2"/>
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            app:layout_constraintTop_toBottomOf="@id/status_bar_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dp16"
            android:layout_marginTop="@dimen/dp16"
            app:srcCompat="@drawable/ic_arrow_back_24dp"
            android:background="@drawable/circle_background_support_touch"
            android:tint="#FAF3DD"
            android:alpha="0.85"
            android:padding="12dp"/>
    </android.support.constraint.motion.MotionLayout>
