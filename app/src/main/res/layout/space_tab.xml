<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="0dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#22000000">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/filter_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:visibility="gone"
                tools:visibility="visible">
                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/events"
                    android:textColor="@color/FlatWhite"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    app:layout_collapseMode="pin"
                    android:gravity="center"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp" />
                <TextView
                    android:id="@+id/filter_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/event_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/filter_string"
                    android:textColor="#EEF5F5F5"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/filter_recycler_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/filter_description"
                    android:clipToPadding="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_circler_event_type"
                    tools:layoutManager="LinearLayoutManager"
                    tools:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    />
                <View
                    android:id="@+id/see_all_panel"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/see_all_text_view"
                    app:layout_constraintBottom_toBottomOf="@id/see_all_text_view"
                    app:layout_constraintStart_toStartOf="@id/see_all_text_view"
                    app:layout_constraintEnd_toEndOf="@id/arrow_see_all_icon"
                    android:background="@drawable/background_filter_see_all"
                    />
                <TextView
                    android:id="@+id/see_all_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/filter_recycler_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/arrow_see_all_icon"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:text="@string/see_all_events"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/FocusYellowColor"
                    android:paddingStart="10dp"
                    android:layout_marginTop="6dp"
                    android:textSize="13sp"/>
                <ImageView
                    android:id="@+id/arrow_see_all_icon"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:src="@drawable/arrow_filled"
                    app:layout_constraintTop_toTopOf="@id/see_all_text_view"
                    app:layout_constraintBottom_toBottomOf="@id/see_all_text_view"
                    app:layout_constraintStart_toEndOf="@id/see_all_text_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:rotation="270"
                    android:tint="@color/FocusYellowColor"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:id="@+id/space_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/see_all_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/spaces"
                    android:textColor="@color/FlatWhite"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    app:layout_collapseMode="pin"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp" />
                <TextView
                    android:id="@+id/space_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/space_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Choose your perfect event planning center!"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="#EEF5F5F5"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_collapseMode="pin"
                android:background="#8823202B">
            <View
                android:id="@+id/search_panel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/FlatWhite"
                android:textStyle="bold"
                android:textSize="24sp"
                app:layout_collapseMode="pin"
                android:gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_search_panel"/>
                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/search_panel"
                    app:layout_constraintBottom_toBottomOf="@id/search_panel"
                    app:layout_constraintStart_toStartOf="@id/search_panel"
                    app:layout_constraintEnd_toStartOf="@id/search_text_view"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:src="@drawable/search_thin"
                    android:tint="#EEE"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
                <TextView
                    android:id="@+id/search_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="@id/search_panel"
                    app:layout_constraintBottom_toBottomOf="@id/search_panel"
                    app:layout_constraintEnd_toEndOf="@id/search_panel"
                    app:layout_constraintStart_toEndOf="@id/search_icon"
                    android:text="Spaces, Events or Services"
                    android:textColor="#EEE"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/space_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                tools:itemCount="0"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/bottom_navigation_parent_height"
                />
        </android.support.v4.widget.SwipeRefreshLayout>
        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No spaces for these events :(("
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#666"
            android:visibility="gone"
            />
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>