<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_item_choose_movie"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:paddingBottom="16dp"
    android:layout_marginBottom="8dp">
    <TextView
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="15dp"
        android:paddingTop="10dp"
        android:text="1. Tổ chức tại nhà hàng"
        android:textStyle="bold"
        android:textColor="@color/FocusYellowColor"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/bonus_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="* Dịch vụ này được tặng kèm miễn phí"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginEnd="30dp"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="#AAA"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/line_bottom"
        app:layout_constraintTop_toBottomOf="@id/bonus_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Cung cấp nhà hàng làm địa điểm tổ chức sự kiện"
        android:layout_marginEnd="30dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/price_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/line_bottom"
        app:layout_constraintTop_toBottomOf="@id/name_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/price"
        android:text="Chi phí"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/line_bottom"
        app:layout_constraintTop_toTopOf="@id/price_text"
        app:layout_constraintBottom_toBottomOf="@id/price_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginEnd="30dp"
        tools:text="1.000.000 đ"
        android:textSize="15sp"
        android:textColor="@color/FlatOrange"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="30dp"/>
</android.support.constraint.ConstraintLayout>